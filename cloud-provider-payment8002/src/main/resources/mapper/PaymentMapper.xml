<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jx.springcloud.dao.PaymentDao">
    <insert id="create" parameterType="com.jx.springcloud.entities.Payment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO payment(serial) VALUES (#{serial})
    </insert>

    <resultMap id="BaseResultMap" type="com.jx.springcloud.entities.Payment">
        <id column="id" property="id"/>
        <id column="serial" property="serial"/>
    </resultMap>

    <select id="getPaymentById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM payment WHERE id = #{id}
    </select>
</mapper>